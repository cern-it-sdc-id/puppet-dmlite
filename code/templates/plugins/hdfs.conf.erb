<%if @enable_io -%>
# Load hdfs io
LoadPlugin plugin_hdfs_io /usr/<%= @libdir %>/dmlite/plugin_hdfs.so
<% end -%>

<%if @enable_ns -%>
# Load namespace and pool manager 
LoadPlugin plugin_hdfs_ns /usr/<%= @libdir %>/dmlite/plugin_hdfs.so
LoadPlugin plugin_hdfs_pooldriver /usr/<%= @libdir %>/dmlite/plugin_hdfs.so
<% end %>

<%if @enable_pool_driver -%>
# Load only hdfs pool
LoadPlugin plugin_hdfs_pooldriver /usr/<%= @libdir %>/dmlite/plugin_hdfs.so
<% end -%>

HdfsNameNode  <%= @hdfs_namenode %>
HdfsPort  <%= @hdfs_port %>
HdfsUser  <%= @hdfs_user %>
HdfsGateway  <%= @hdfs_gateway %>
HdfsReplication <%= @hdfs_replication %>

<%if @enable_io -%>
HdfsTmpFolder <%= @hdfs_tmp_folder %>
<% end -%>

<%if @enable_ns -%>
HdfsMode  <%= @hdfs_mode %>
MapFile   <%= @map_file %>
<% end %>

#environment parameters
HadoopHomeLib      <%= @hadoop_home_lib %>
HdfsHomeLib   <%= @hdfs_home_lib %>
HadoopConfFolder  <%= @hadoop_conf_folder %>

# Token generation
TokenPassword <%= @token_password %>
TokenId <%= @token_id %>
TokenLife <%= @token_life %>
