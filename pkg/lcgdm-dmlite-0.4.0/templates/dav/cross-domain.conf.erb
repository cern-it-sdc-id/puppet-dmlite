SetEnvIfNoCase Origin "(http(s)?://((.+)\.)?<%= @domain_string %>(:[0-9]+)?)$" ACCESS_CONTROL_ORIGIN=$1

Header always set Access-Control-Allow-Origin %{ACCESS_CONTROL_ORIGIN}e env=ACCESS_CONTROL_ORIGIN
Header always set Access-Control-Allow-Credentials true env=ACCESS_CONTROL_ORIGIN
Header always set Access-Control-Allow-Methods "ACL, CANCELUPLOAD, CHECKIN, CHECKOUT, COPY, DELETE, GET, HEAD, LOCK, MKCALENDAR, MKCOL, MOVE, OPTIONS, POST, PROPFIND, PROPPATCH, PUT, REPORT, SEARCH, UNCHECKOUT, UNLOCK, UPDATE, VERSION-CONTROL" env=ACCESS_CONTROL_ORIGIN
Header always set Access-Control-Allow-Headers "Authorization, Overwrite, Destination, Content-Type, Depth, User-Agent, Translate, Range, Content-Range, Timeout, X-File-Size, X-Requested-With, Accept, Accept-Version, If-Modified-Since, X-File-Name, Cache-Control, Location, Lock-Token, If, X-No-Redirect" env=ACCESS_CONTROL_ORIGIN
Header always set Access-Control-Expose-Headers: "DAV, content-length, Allow, Location" env=ACCESS_CONTROL_ORIGIN
